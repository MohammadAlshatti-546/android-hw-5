<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/yourcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/elsie_swash_caps"
        android:text="your CV"
        android:textSize="50sp" />
    <TextView
        android:id="@+id/n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/yourcv"
        android:layout_marginTop="75dp"
        android:text="name"
        android:layout_marginStart="30dp"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/n"
        android:layout_marginTop="55dp"
        android:text="."
        android:layout_marginStart="30dp"
        android:textSize="19sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/Name"
        android:layout_marginTop="75dp"
        android:text="Age"
        android:layout_marginStart="30dp"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/A"
        android:layout_marginTop="55dp"
        android:text="."
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/J"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Age"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:text="Job"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/J"
        android:layout_marginTop="55dp"
        android:text="."
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:textSize="19sp"/>
    <TextView
        android:id="@+id/P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/Job"
        android:layout_marginTop="75dp"
        android:text="phone number"
        android:layout_marginStart="30dp"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/P"
        android:layout_marginTop="55dp"
        android:text="."
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:autoLink="all"
        android:clickable="true"
        android:textSize="19sp"/>
    <TextView
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/Phone"
        android:layout_marginTop="75dp"
        android:text="Email Addres"
        android:layout_marginStart="30dp"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@id/E"
        android:layout_marginTop="55dp"
        android:text="."
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:textSize="19sp"
        android:autoLink="all"
        android:clickable="true"/>


</RelativeLayout>